<style type="text/css">
    #clients > .hex-wrapper {
        position: absolute;
        top: 13.5%;
        left: 10%;
        width: 66.5%;
        height: calc((100vw - 50pt - 106pt) * 9 / 12 * .665 * 920 / 991);
    }
    #clients .hex-wrapper > .hex-outer-container {
        position: absolute;
        height: calc((100vw - 50pt - 106pt) * 9 / 12 * .665 * .24 * 546 / 486);
        width: calc((100vw - 50pt - 106pt) * 9 / 12 * .665 * .24);
        cursor: pointer;
    }
    #clients .hex-wrapper .hex-inner-container {
        position: relative;
        width: calc((100vw - 50pt - 106pt) * 9 / 12 * .665 * .24);
    }
    #clients .hex-wrapper img {
        position: absolute;
        top: 0;
        left: 0;
        height: calc((100vw - 50pt - 106pt) * 9 / 12 * .665 * .24 * 546 / 486);
